Bootstrap: docker
From: rockylinux:8.9

%post
    dnf -y install epel-release

    # Install required dependencies
    dnf -y install wget

    # Install Macaulay2
    wget "https://macaulay2.com/Downloads/Common/Macaulay2-1.24.11-1.common.rpm" -O /opt/macaulay2-common.rpm
    wget "https://macaulay2.com/Downloads/GNU-Linux/Red%20Hat%20Enterprise,%20CentOS,%20Scientific%20Linux/Macaulay2-1.24.11-1.x86_64-Linux-RockyLinux-8.9.rpm"  -O /opt/macaulay2.rpm
    dnf -y install /opt/macaulay2-common.rpm /opt/macaulay2.rpm
